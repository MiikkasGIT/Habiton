<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CancelButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">170dp</item>
        <item name="android:layout_height">49dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/subtext</item>
        <item name="backgroundTint">@color/backing_light</item>
        <item name="cornerRadius">15dp</item>
    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemBackground">@null</item>
    </style>

    <style name="CustomToggleButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@color/primary</item>
    </style>

    <style name="CustomPopupMenu" parent="Widget.Material3.PopupMenu">
        <item name="android:textColor">@color/highlight_dark</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:background">@drawable/border20</item>
        <item name="android:backgroundTint">@color/module</item>
        <item name="android:padding">18dp</item>
    </style>

    <style name="CustomDefaultButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/highlight_dark</item>
        <item name="backgroundTint">@color/highlight</item>
        <item name="cornerRadius">20dp</item>
    </style>

    <style name="CustomOutlinedButtonPopUpMenu" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/highlight_dark</item>
        <item name="strokeColor">@color/highlight</item>
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">10dp</item>
    </style>

    <style name="CustomOutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/highlight_dark</item>
        <item name="strokeColor">@color/highlight</item>
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">20dp</item>
    </style>

    <style name="TransparentDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

</resources>
