<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Äußeres Shape für den Rand -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp"/>
            <solid android:color="@color/highlight"/> <!-- Farbe des Randes -->
        </shape>
    </item>

    <!-- Inneres Shape für den Inhalt -->
    <item android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="20dp"/>
            <solid android:color="@color/backing_light"/> <!-- Hintergrundfarbe des Inhalts -->
        </shape>
    </item>
</layer-list>
